<script>

    document.querySelectorAll('.form-check-input').forEach((checkbox) => {
        checkbox.addEventListener('change', function() {
          const row = this.closest('tr'); // Obtener la fila de la tabla donde está el checkbox
          const adminCheckbox = row.querySelector('.admin-checkbox');
          const userCheckbox = row.querySelector('.user-checkbox');
          
          // Si el checkbox de Administrador es seleccionado, desmarcar el de Usuario
          if (this.classList.contains('admin-checkbox') && adminCheckbox.checked) {
            userCheckbox.checked = false;
          }
          
          // Si el checkbox de Usuario es seleccionado, desmarcar el de Administrador
          if (this.classList.contains('user-checkbox') && userCheckbox.checked) {
            adminCheckbox.checked = false;
          }
        });
      });




    function previewImage(event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('profile-img');
                output.src = reader.result;
            }
            reader.readAsDataURL(file);
        }
    }


</script>

<script>
    document.getElementById('registrarForm').addEventListener('submit', function (e) {
        e.preventDefault();  // Prevenir el envío normal del formulario

        // Obtener los valores de la contraseña y confirmación
        const password = document.getElementById('password').value;
        const confirmarPassword = document.getElementById('confirmar-password').value;

        // Verificar que la contraseña tenga al menos 8 caracteres
        if (password.length < 8) {
            Swal.fire({
                title: "Error",
                text: "La contraseña debe tener al menos 8 caracteres.",
                icon: "error"
            });
            return;  // Evita el envío del formulario
        }

        // Verificar que las contraseñas coincidan
        if (password !== confirmarPassword) {
            Swal.fire({
                title: "Error",
                text: "Las contraseñas no coinciden.",
                icon: "error"
            });
            return;  // Evita el envío del formulario
        }

        // Usamos FormData para enviar el formulario en formato multipart/form-data
        let formData = new FormData(this);

        // Enviar los datos como multipart/form-data con el método POST
        fetch('/registrar', {
            method: 'POST',
            body: formData  // Enviamos el objeto FormData, que contiene los datos del formulario
        })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    Swal.fire({
                        title: "Error",
                        text: "Hubo un error al registrar el usuario.",
                        icon: "error"
                    });
                } else {
                    // SweetAlert para mostrar el mensaje de éxito
                    Swal.fire({
                        title: "¡Registro Exitoso!",
                        text: "Usuario registrado correctamente. ¿Deseas agregar otro usuario o cerrar?",
                        icon: "success",
                        showCancelButton: true,
                        confirmButtonText: "Agregar otro usuario",
                        cancelButtonText: "Cerrar",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Si el usuario quiere agregar otro, reiniciamos el formulario
                            document.getElementById('registrarForm').reset();
                        } else {
                            // Si se cancela, solo cerramos el modal y recargamos la página
                            var modal = bootstrap.Modal.getInstance(document.getElementById('staticBackdrop'));
                            modal.hide();  // Cierra el modal
                            location.reload();  // Recarga la página
                        }
                    });
                }
            })
            .catch(error => {
                console.error('Error al enviar los datos:', error);
                Swal.fire({
                    title: "Error",
                    text: "Hubo un problema al enviar el formulario.",
                    icon: "error"
                });
            });
    });
</script>

<script>
    // Función para manejar la eliminación de un usuario
    document.addEventListener('DOMContentLoaded', () => {
      const deleteButtons = document.querySelectorAll('.delete-btn'); // Seleccionamos todos los botones de eliminar
  
      deleteButtons.forEach(button => {
        button.addEventListener('click', async function() {
          const userId = this.getAttribute('data-id');  // Obtenemos el ID del usuario
          const table = this.getAttribute('data-table'); // Obtenemos la tabla (roles)
  
          console.log('Eliminación solicitada:', { userId, table });  // Log para ver los datos
  
          if (confirm("¿Estás seguro de que quieres eliminar este usuario?")) {
            try {
              const response = await fetch('/eliminar', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  personal_id: userId,  // El ID del usuario
                  tabla: table,  // En este caso, la tabla de "roles"
                }),
              });
  
              const result = await response.json();
              console.log('Respuesta del servidor:', result); // Log para ver la respuesta del servidor
  
              if (response.ok) {
                alert(result.message); // Muestra un mensaje de éxito
                this.closest('tr').remove();  // Elimina la fila correspondiente de la tabla en la vista
                console.log('Fila eliminada del DOM');
              } else {
                alert('Error: ' + result.message); // En caso de error en la eliminación
              }
            } catch (error) {
              console.error('Error al eliminar el registro:', error);
              alert('Error al intentar eliminar el registro');
            }
          }
        });
      });
    });
  </script>