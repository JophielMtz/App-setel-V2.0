<form id="formEditarPersonal" action="/actualizar-personal/<%= personal.personal_id %>" method="POST">
    <!-- Campos del formulario -->
    <div class="mb-3">
      <label for="nombre" class="form-label">Nombre</label>
      <input type="text" class="form-control" id="nombre" name="nombre" value="<%= personal.nombre %>" required>
    </div>
  
    <div class="mb-3">
      <label for="apellido_paterno" class="form-label">Apellido Paterno</label>
      <input type="text" class="form-control" id="apellido_paterno" name="apellido_paterno" value="<%= personal.apellido_paterno %>" required>
    </div>
  
    <div class="mb-3">
      <label for="apellido_materno" class="form-label">Apellido Materno</label>
      <input type="text" class="form-control" id="apellido_materno" name="apellido_materno" value="<%= personal.apellido_materno %>" required>
    </div>
  
    <!-- Añade el resto de campos necesarios siguiendo el mismo formato -->
  
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
  </form>
  

  <div class="container-fluid content-inner mt-n5 py-0">
  <div>
    <div class="row">
      <div class="col-sm-12 col-lg-8 mx-auto">
        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <div class="header-title text-center w-100">
              <h4 class="card-title">Agregar personal</h4>
            </div>
          </div>
          <div class="ms-3 card-body">
            <!--Form-->
            <form
              id="form-wizard1"
              method="POST"
              action="/personal/agregar"
              enctype="multipart/form-data"
              class="needs-validation mt-3 text-center"
              novalidate
            >
              <ul
                id="top-tab-list"
                class="p-0 row list-inline justify-content-center"
              >
                <li
                  class="mb-2 col-lg-3 col-md-6 text-center active"
                  id="account"
                >
                  <a href="javascript:void();">
                    <div class="iq-icon me-3">
                      <svg width="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M11.997 15.1746C7.684 15.1746 4 15.8546 4 18.5746C4 21.2956 7.661 21.9996 11.997 21.9996C16.31 21.9996 19.994 21.3206 19.994 18.5996C19.994 15.8786 16.334 15.1746 11.997 15.1746Z" fill="currentColor"></path>
                        <path opacity="0.4" d="M11.9971 12.5838C14.9351 12.5838 17.2891 10.2288 17.2891 7.29176C17.2891 4.35476 14.9351 1.99976 11.9971 1.99976C9.06008 1.99976 6.70508 4.35476 6.70508 7.29176C6.70508 10.2288 9.06008 12.5838 11.9971 12.5838Z" fill="currentColor"></path>
                      </svg>
                    </div>
                    <span class="dark-wizard">General</span>
                  </a>
                </li>
                <li id="personal" class="mb-2 col-lg-3 col-md-6 text-center">
                  <a href="javascript:void();">
                    <div class="iq-icon me-3">
                      <svg width="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path opacity="0.4" d="M16.8843 5.11485H13.9413C13.2081 5.11969 12.512 4.79355 12.0474 4.22751L11.0782 2.88762C10.6214 2.31661 9.9253 1.98894 9.19321 2.00028H7.11261C3.37819 2.00028 2.00001 4.19201 2.00001 7.91884V11.9474C1.99536 12.3904 21.9956 12.3898 21.9969 11.9474V10.7761C22.0147 7.04924 20.6721 5.11485 16.8843 5.11485Z" fill="currentColor"></path>
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M20.8321 6.54353C21.1521 6.91761 21.3993 7.34793 21.5612 7.81243C21.8798 8.76711 22.0273 9.77037 21.9969 10.7761V16.0292C21.9956 16.4717 21.963 16.9135 21.8991 17.3513C21.7775 18.1241 21.5057 18.8656 21.0989 19.5342C20.9119 19.8571 20.6849 20.1553 20.4231 20.4215C19.2383 21.5089 17.665 22.0749 16.0574 21.9921H7.93061C6.32049 22.0743 4.74462 21.5086 3.55601 20.4215C3.2974 20.1547 3.07337 19.8566 2.88915 19.5342C2.48475 18.8661 2.21869 18.1238 2.1067 17.3513C2.03549 16.9142 1.99981 16.4721 2 16.0292V10.7761C1.99983 10.3374 2.02357 9.89902 2.07113 9.46288C2.08113 9.38636 2.09614 9.31109 2.11098 9.23659C2.13573 9.11241 2.16005 8.99038 2.16005 8.86836C2.25031 8.34204 2.41496 7.83116 2.64908 7.35101C3.34261 5.86916 4.76525 5.11492 7.09481 5.11492H16.8754C18.1802 5.01401 19.4753 5.4068 20.5032 6.21522C20.6215 6.3156 20.7316 6.4254 20.8321 6.54353ZM6.97033 15.5412H17.0355H17.0533C17.2741 15.5507 17.4896 15.4717 17.6517 15.3217C17.8137 15.1716 17.9088 14.963 17.9157 14.7425C17.9282 14.5487 17.8644 14.3577 17.7379 14.2101C17.5924 14.0118 17.3618 13.8935 17.1155 13.8907H6.97033C6.51365 13.8907 6.14343 14.2602 6.14343 14.7159C6.14343 15.1717 6.51365 15.5412 6.97033 15.5412Z" fill="currentColor"></path>
                      </svg>
                    </div>
                    <span class="dark-wizard">laboral</span>
                  </a>
                </li>
                <li id="confirm" class="mb-2 col-lg-3 col-md-6 text-center">
                  <a href="javascript:void();">
                    <div class="iq-icon me-3">
                      <svg
                        class="svg-icon icon-20"
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                    </div>
                    <span class="dark-wizard">Finalizar</span>
                  </a>
                </li>
              </ul>

              <!-- Paso 1: Información General -->
              <fieldset>
                <div class="form-card text-start">
                  <div class="row">
                    <div class="col-7">
                      <h3 class="mb-4">Información General:</h3>
                    </div>
                    <div class="col-5">
                      <h2 class="steps">Paso 1 - 3</h2>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input
                          type="text"
                          class="form-control"
                          id="nombre"
                          name="nombre"
                          placeholder="Ingresa el nombre"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa el nombre.
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="apellido_paterno" class="form-label"
                          >Apellido Paterno</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="apellido_paterno"
                          name="apellido_paterno"
                          placeholder="Ingresa el apellido paterno"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa el apellido paterno.
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="apellido_materno" class="form-label"
                          >Apellido Materno</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="apellido_materno"
                          name="apellido_materno"
                          placeholder="Ingresa el apellido materno"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa el apellido materno.
                        </div>
                      </div>
                    </div>
                    <div class="col-md-7">
                      <div class="form-group">
                        <label for="direccion" class="form-label"
                          >Dirección</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="direccion"
                          name="direccion"
                          placeholder="Ingresa la dirección"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa la dirección.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-5">
                      <div class="form-group">
                        <label for="curp" class="form-label">Correo</label>
                        <input
                          type="text"
                          class="form-control"
                          id="correo"
                          name="correo"
                          placeholder="Ingresa el correo"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa el CURP.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="rfc" class="form-label">RFC</label>
                        <input
                          type="text"
                          class="form-control"
                          id="rfc"
                          name="rfc"
                          placeholder="Ingresa el RFC"
                          maxlength="13"
                          pattern="[A-Za-z0-9]{13}"
                          required
                        />
                        <div class="invalid-feedback">
                          Favor ingresa el RFC correctamente.
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <label for="curp" class="form-label">CURP</label>
                      <input
                        type="text"
                        class="form-control"
                        id="curp"
                        name="curp"
                        placeholder="Ingresa el CURP"
                        required
                        pattern="[A-Z0-9]{18}"
                      />
                      <div class="invalid-feedback">
                        El CURP debe contener exactamente 18 caracteres
                        alfanuméricos.
                      </div>
                    </div>

                    <div class="col-md-6 mt-3">
                      <label for="fecha_nacimiento" class="form-label"
                        >Fecha de Nacimiento</label
                      >
                      <input
                        type="date"
                        class="form-control"
                        id="fecha_nacimiento"
                        name="fecha_nacimiento"
                      />
                      <div class="invalid-feedback">
                        Por favor selecciona la fecha de nacimiento.
                      </div>
                    </div>

                    <div class="col-md-6 mt-3">
                      <div class="form-group">
                        <label for="telefono" class="form-label"
                          >Teléfono</label
                        >
                        <input
                          type="text"
                          class="form-control"
                          id="telefono"
                          name="telefono"
                          placeholder="Ingresa el teléfono"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa el número de teléfono.
                        </div>
                      </div>
                    </div>

                    <div class="container">
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group mt-3 text-start">
                            <label class="form-label">Género</label><br />
                            <div class="form-check form-check-inline">
                              <input
                                class="form-check-input"
                                type="radio"
                                name="sexo"
                                id="genero_hombre"
                                value="H"
                                required
                              />
                              <label
                                class="form-check-label"
                                for="genero_hombre"
                                >Hombre</label
                              >
                            </div>
                            <div class="form-check form-check-inline">
                              <input
                                class="form-check-input"
                                type="radio"
                                name="sexo"
                                id="genero_mujer"
                                value="M"
                                required
                              />
                              <label class="form-check-label" for="genero_mujer"
                                >Mujer</label
                              >
                            </div>
                          </div>
                        </div>
                      </div>

                      <div class="row mt-4">
                        <div
                          class="col-md-12 d-flex flex-column flex-md-row align-items-center"
                        >
                          <div class="avatar mb-3 mb-md-0">
                            <img
                              id="previewImage"
                              src="images/avatars/01.png"
                              alt="Imagen seleccionada"
                              class="avatar-img rounded-circle border"
                              style="
                                width: 200px;
                                height: 200px;
                                object-fit: cover;
                                object-position: center;
                              "
                            />
                          </div>
                          <div class="ms-md-3">
                            <input
                              type="file"
                              id="subirimagen"
                              name="imagen"
                              class="d-none"
                              accept="image/*"
                            />
                            <button
                              type="button"
                              class="btn btn-primary btn-round"
                              onclick="document.getElementById('subirimagen').click()"
                            >
                              Subir imagen
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <button
                  type="button"
                  id="nextBtn"
                  class="btn btn-primary next action-button float-end mt-2"
                  value="Next"
                >
                  Siguiente
                </button>
              </fieldset>

              <!-- Paso 2: Información de Contacto -->
              <fieldset>
                <div class="form-card text-start">
                  <div class="row">
                    <div class="col-7">
                      <h3 class="mb-4">Información Laboral:</h3>
                    </div>
                    <div class="col-5">
                      <h2 class="steps">Paso 2 - 2</h2>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-12">
                      <h4 class="text-center mt-3 mb-5 text-gray">
                        Selecciona los Detalles del Centro de Trabajo Sección y
                        Zona
                      </h4>
                    </div>

                    <!-- Campo Sector -->
                    <div class="col-md-5">
                      <div class="form-group">
                        <label for="sector_id" class="form-label">Sector</label>
                        <select
                          class="form-select"
                          id="sector_id"
                          name="sector_id"
                          required
                        >
                          <option value="">Selecciona un sector</option>
                          <% sectores.forEach(function(sector) { %>
                          <option value="<%= sector.sector_id %>">
                            <%= sector.sector_numero %>
                          </option>
                          <% }); %>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona el sector.
                        </div>
                      </div>
                    </div>

                    <!-- Campo Zona -->
                    <div class="col-md-5">
                      <div class="form-group">
                        <label for="zona_id" class="form-label">Zona</label>
                        <select
                          class="form-select mb-3 shadow-none"
                          id="zona_id"
                          name="zona_id"
                          required
                          disabled
                        >
                          <option value="">Selecciona una zona</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona la zona.
                        </div>
                      </div>
                    </div>

                    <!-- Campo Municipio -->
                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="municipio_id" class="form-label"
                          >Municipio</label
                        >
                        <select
                          class="form-select mb-3 shadow-none"
                          id="municipio_id"
                          name="municipio_id"
                          required
                          disabled
                        >
                          <option value="">Selecciona un municipio</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona el municipio.
                        </div>
                      </div>
                    </div>

                    <!-- Campo Comunidad -->
                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="comunidad_id" class="form-label"
                          >Comunidad</label
                        >
                        <select
                          class="form-select mb-3 shadow-none"
                          id="comunidad_id"
                          name="comunidad_id"
                          required
                          disabled
                        >
                          <option value="">Selecciona una comunidad</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona la comunidad.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="cct_id" class="form-label"
                          >Centro de Trabajo</label
                        >
                        <select
                          class="form-select mb-3 shadow-none"
                          id="cct_id"
                          name="cct_id"
                          required
                        >
                          <option value="">Clave CCT</option>
                          <!-- Opciones dinámicas -->
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona el centro de trabajo.
                        </div>
                      </div>
                    </div>

                    <div class="col-12">
                      <h4 class="text-center mt-3 mb-5 text-gray">
                        Selecciona Cargo y Tipo de Organización
                      </h4>
                    </div>

                    <div class="col-md-3">
                      <div class="form-group">
                        <label for="cargo_id" class="form-label">Cargo</label>
                        <select
                          class="form-select mb-3 shadow-none"
                          id="cargo_id"
                          name="cargo_id"
                          style="max-height: 300px; overflow-y: auto"
                          required
                        >
                          <option value="">Selecciona el cargo</option>
                          <option value="1">Director</option>
                          <option value="2">Subdirector</option>
                          <option value="3">Docente</option>
                          <option value="4">Auxiliar Administrativo</option>
                          <option value="5">Auxiliar de Servicios</option>
                          <option value="6">Docente de apoyo</option>
                          <option value="7">Docente/ATP</option>
                          <option value="8">Velador</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona el cargo.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="tipo_direccion_id" class="form-label"
                          >Tipo de Dirección</label
                        >
                        <select
                          class="form-select mb-3 shadow-none"
                          id="tipo_direccion_id"
                          name="tipo_direccion_id"
                        >
                          <option value="">
                            Selecciona el tipo de dirección
                          </option>
                          <option value="1">D/comisionado</option>
                          <option value="2">D/frente a grupo</option>
                          <option value="3">D/técnico</option>
                          <option value="4">D/comisionado</option>
                          <option value="5">D/frente a grupo</option>
                          <option value="6">D/técnico</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona el tipo de dirección.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-5">
                      <div class="form-group">
                        <label for="tipo_organizacion_id" class="form-label"
                          >Tipo de Organización</label
                        >
                        <select
                          class="form-select mb-3 shadow-none"
                          id="tipo_organizacion_id"
                          name="tipo_organizacion_id"
                          required
                        >
                          <option value="">
                            Selecciona el tipo de organización
                          </option>
                          <option value="1">Unitaria</option>
                          <option value="2">Bidocente</option>
                          <option value="3">Tridocente</option>
                          <option value="5">Completa</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona el tipo de organización.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="plaza_id" class="form-label">Plaza</label>
                        <select
                          class="form-select mb-3 shadow-none"
                          id="plaza_id"
                          name="plaza_id"
                          required
                        >
                          <option value="">Selecciona la Plaza</option>
                          <option value="1">071040</option>
                        </select>
                        <div class="invalid-feedback">
                          Por favor selecciona la Plaza.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="esquema" class="form-label">Esquema</label>
                        <input
                          type="text"
                          class="form-control mb-3 shadow-none"
                          id="esquema"
                          name="esquema"
                          placeholder="Escribe el Esquema"
                          required
                          pattern=".{14,14}"
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa el Esquema con exactamente 14
                          caracteres.
                        </div>
                      </div>
                    </div>

                    <div class="w-100"></div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="fecha_ingreso" class="form-label"
                          >Fecha de Ingreso</label
                        >
                        <input
                          type="date"
                          class="form-control"
                          id="fecha_ingreso"
                          name="fecha_ingreso"
                          required
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa la fecha de ingreso.
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="fecha_nombramiento" class="form-label"
                          >Fecha de Nombramiento</label
                        >
                        <input
                          type="date"
                          class="form-control"
                          id="fecha_nombramiento"
                          name="fecha_nombramiento"
                        />
                        <div class="invalid-feedback">
                          Por favor ingresa la fecha de nombramiento.
                        </div>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <!-- Título Estado -->
                      <label for="flexSwitchCheckChecked" class="form-label"
                        >Estado</label
                      >
                      <!-- Switch Activo/Pausa -->
                      <div class="mb-3 form-check form-switch">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="flexSwitchCheckChecked"
                          onchange="updateSwitchLabel(this)"
                          checked
                        />
                        <label
                          class="form-check-label"
                          for="flexSwitchCheckChecked"
                          id="switch-label"
                          >Activo</label
                        >
                      </div>
                    </div>
                  </div>
                </div>
                <button
                  type="submit"
                  name="next"
                  class="btn btn-primary next action-button float-end"
                  value="Next"
                >
                  Siguiente
                </button>
                <button
                  type="button"
                  name="previous"
                  class="btn btn-dark previous action-button-previous float-end me-1"
                  value="Previous"
                >
                  Anterior
                </button>
              </fieldset>

              <!-- Paso 3: Documentos -->

              <!-- Paso 4: Finalizar -->
              <fieldset>
                <div class="form-card">
                  <div class="row">
                    <div class="col-7">
                      <h3 class="mb-4 text-left">Finalizar:</h3>
                    </div>
                    <div class="col-5">
                      <h2 class="steps">Paso 4 - 4</h2>
                    </div>
                  </div>
                  <br /><br />
                  <h2 class="text-center text-success">
                    <strong>¡Exito!</strong>
                  </h2>
                  <br />
                  <div class="row justify-content-center">
                    <div class="col-3">
                      <img
                        src="images/pages/img-success.png"
                        class="img-fluid"
                        alt="fit-image"
                      />
                    </div>
                  </div>
                  <br /><br />
                  <div class="row justify-content-center">
                    <div class="text-center col-7">
                      <h5 class="text-center purple-text">
                        Ha registrado al personal exitosamente
                      </h5>
                    </div>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>