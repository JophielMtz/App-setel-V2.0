    font-size: calc(1em - 1px);
  }

  /* Reduce el tamaño de la fuente en las celdas de la tabla */
  table td {
    font-size: calc(1em - 1px);
  }

  /* Aplica un padding más compacto para las celdas de la tabla */
  table th,
  table td {
    padding: 4px 8px;
    /* Ajusta estos valores según lo necesites */
  }
