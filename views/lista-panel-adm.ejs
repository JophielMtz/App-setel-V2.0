                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Cargo</th>
                    <th style="min-width: 100px">Acción</th>
                  </tr>
                </thead>
                <tbody>
                  <% personal.forEach(persona=> { %>
                    <tr>
                      <td>
                        <%= persona.personal_id %>
                      </td>
                      <td class="text-center">
                        <img class="rounded-circle img-fluid avatar-40" src="/uploads/<%= persona.imagen %>"
                          alt="profile" style="width: 60px; height: 60px; object-fit: cover;box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);" />
                      </td>
                      <td><%= persona.rfc %></td>
                      <td><%= persona.nombre %></td>
                      <td><%= persona.apellido_paterno %></td>
                      <td><%= persona.apellido_materno %></td>
                      <td><%= persona.edad %></td>
                      <td><%= persona.telefono %></td>
                      <td><%= persona.correo %></td>
                      <td><%= persona.cargo %></td>
