            button.innerHTML = '<i class="fas fa-times me-2"></i>Finalizar Edición';
            gridApi.refreshCells({ force: true }); // Refrescar las celdas para aplicar edición
        }
    });

    document.addEventListener("DOMContentLoaded", initializeGrid);
</script>